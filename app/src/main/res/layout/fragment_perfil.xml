<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.PerfilFragment"
    android:background="@color/colorFondo">


    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/imgPerfil"
        android:layout_width="@dimen/photo_perfil"
        android:layout_height="@dimen/photo_perfil"
        android:src="@drawable/perro2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margen_top_perfil"
        app:civ_border_color="@color/colorPrimary"
        app:civ_border_width="4dp"
        app:civ_shadow="true"
        app:civ_shadow_radius="5"
        app:civ_shadow_color="#000000"/>

    <TextView
        android:id="@+id/tvPerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nombre_card"
        android:layout_below="@+id/imgPerfil"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/size_perfilName"
        android:textStyle="bold"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvPerfil"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvPerfil">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>

