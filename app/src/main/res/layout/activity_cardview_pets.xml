<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            >

            <ImageView
                android:id="@+id/imgmascota"
                android:layout_marginTop="15dp"
                android:layout_width="@dimen/images_card_height"
                android:layout_height="@dimen/images_card_height"
                android:scaleType="centerCrop"


                />
        </RelativeLayout>







        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/margenes_deLayout"
            android:layout_marginRight="@dimen/margenes_deLayout"
            android:layout_marginTop="@dimen/margenes_deLayout"

            >

            <ImageView
                android:id="@+id/ivhuesito_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dog_bone_50"
                android:layout_marginLeft="50dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/nombre_card"
                android:id="@+id/nombre"
                android:layout_marginLeft="20dp"

                />

            <TextView
                android:id="@+id/tvlikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/huesitos_acum"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginLeft="50dp"

                />

            <ImageView
                android:id="@+id/ivacumulador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dog_bone_filled_50"
                />

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
